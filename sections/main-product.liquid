    }
    .product-section {
      /*margin-bottom: 5rem;*/
    }
    body.mobile .product-section {
      margin-bottom: unset;
    }
    .product__info-container .product-form {
        margin: 2.5rem 0 0 0;
    }
    @media screen and (max-width: 768px) {
      .product__info-container {
