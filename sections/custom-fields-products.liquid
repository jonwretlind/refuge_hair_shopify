{% render "blocks.custom_fields" with resource_type: "products", blocks: section.blocks %}
{% schema %}
  {
    "name": {
        "en": "Custom Fields"
    },
    "settings": [
        {
            "type": "paragraph",
            "content": "[View Documentation](https:\/\/custom-fields.docs.bonify.io\/)"
        },
        {
            "type": "paragraph",
            "content": "[Edit Custom Fields](https:\/\/customfields.bonify.io\/dashboard\/refugeshop.myshopify.com\/products\/configure)"
        }
    ],
    "templates": [
        "product"
    ],
    "presets": [
        {
            "name": "Custom Fields",
            "blocks": []
        }
    ],
    "blocks": [
        {
            "type": "cf_f_html",
            "name": {
                "en": "HTML"
            },
            "settings": [
                {
                    "type": "select",
                    "id": "key",
                    "label": "Select a Field",
                    "options": [
                        {
                            "value": "short_description",
                            "label": "short_description"
                        }
                    ]
                }
            ]
        },
        {
            "type": "cf_f_img",
            "name": {
                "en": "Image"
            },
            "settings": [
                {
                    "type": "select",
                    "id": "key",
                    "label": "Select a Field",
                    "options": [
                        {
                            "value": "alternate_image",
                            "label": "alternate_image"
                        }
                    ]
                }
            ]
        }
    ]
}
{% endschema %}
