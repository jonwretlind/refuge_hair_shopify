{% if page.metafields.custom_fields["accordions"] != blank %}
  <div class="custom-field custom-field__accordions custom-field__type--field-collection-json">
    <h3 class="custom-field--title">Accordions</h3>
    <div class="custom-field--value">
      {% for item in page.metafields.custom_fields["accordions"] %}
        <div class="fc-item fc-index--{{ forloop.index0 }}">
           {% if item["title"] != blank %}
             <div class="fc-field field__title field-type--text">
               <h4 class="custom-field--title">Title</h4>
               <div class="custom-field--value">
                 {{ item["title"] }}
               </div>
             </div>
           {% endif %}
           {% if item["content"] != blank %}
             <div class="fc-field field__content field-type--html">
               <h4 class="custom-field--title">Content</h4>
               <div class="custom-field--value">
                 {{ item["content"] }}
               </div>
             </div>
           {% endif %}
         </div>
       {% endfor %}
    </div>
  </div>
{% endif %}