<div id="MegamenuThumbs{{ tag.index }}" class="megathumb">
  <h3 class="megamenu-heading">SHOP FEATURED ITEMS</h3>
  <div class="thumbs">
  {%- for product in collections.all.products -%}
    {%- for tag in product.tags -%}
      {%- if tag contains "megamenu-featured" -%}
          <div class="thumb">
            <a href="#" class="thumb-link" />
            <img
              srcset="{{ product.featured_image | img_url: '165x' }}"
              src="{{ product.featured_image | img_url: '165x' }}"
              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 3 }}px, (min-width: 750px) calc((100vw - 130px) / 3), calc(100vw - 30px)"
              alt="{{ product.title | escape }}"
              height="{{ product.featured_image.height }}"
              width="{{ product.featured_image.width }}"
              loading="lazy"
              class="thumb-image"
              >
              <span>{{ product.title }}</span>
          </div>
      {%- endif -%}
    {%- endfor -%}
  {%- endfor -%}
  </div>
</div>




{% comment %}
{%- for link in section.settings.menu.links -%}
<div id="MegamenuThumbs{{ link.index }}" class="megathumb-{{ forloop.index }}">
  <div class="thumbs">
    {%- for childlink in link.links -%}
      <div class="thumb thumb-{{ forloop.index }}">
        <a href="#" class="thumb-link" />
          <img src="{%- if collection.metafields.custom_fields['alternate_image'] != blank -%}{%- render 'cf-image' with image: collection.metafields.custom_fields['alternate_image'] -%}{%- else -%}https://cdn.shopify.com/s/files/1/2380/1623/files/Mark240x240.png?v=1620159759{%- endif -%}" class="thumb-image" />
          <span>THUMB-{{ forloop.index }}</span>
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>
{%- endfor -%}
{% endcomment %}


