{% if product.metafields.custom_fields["steps"] != blank %}
  <div class="custom-field custom-field__steps custom-field__type--field-collection-json">
    <h3 class="custom-field--title">steps</h3>
    <div class="custom-field--value">
      {% for item in product.metafields.custom_fields["steps"] %}
        <div class="fc-item fc-index--{{ forloop.index0 }}">
           {% if item["image"] != blank %}
             <div class="fc-field field__image field-type--image">
               <h4 class="custom-field--title">Image</h4>
               <div class="custom-field--value">
                 {{ item["image"] }}
               </div>
             </div>
           {% endif %}
           {% if item["alt_text"] != blank %}
             <div class="fc-field field__alt-text field-type--text">
               <h4 class="custom-field--title">Alt Text</h4>
               <div class="custom-field--value">
                 {{ item["alt_text"] }}
               </div>
             </div>
           {% endif %}
           {% if item["copy"] != blank %}
             <div class="fc-field field__copy field-type--html">
               <h4 class="custom-field--title">Copy</h4>
               <div class="custom-field--value">
                 {{ item["copy"] }}
               </div>
             </div>
           {% endif %}
           {% if item["background_color"] != blank %}
             <div class="fc-field field__background-color field-type--text-list">
               <h4 class="custom-field--title">Background Color</h4>
               <div class="custom-field--value">
                 {{ item["background_color"] }}
               </div>
             </div>
           {% endif %}
         </div>
       {% endfor %}
    </div>
  </div>
{% endif %}